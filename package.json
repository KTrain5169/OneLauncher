{
	"name": "@onelauncher/root",
	"type": "module",
	"version": "1.0.0",
	"packageManager": "pnpm@9.6.0",
	"description": "Next-generation open source Minecraft launcher and tools for interacting with Polyfrost",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "git@github.com:polyfrost/onelauncher"
	},
	"bugs": {
		"url": "https://github.com/polyfrost/onelauncher/issues"
	},
	"engines": {
		"pnpm": "9.6.0",
		"npm": "pnpm",
		"yarn": "pnpm",
		"node": ">=18"
	},
	"scripts": {
		"frontend": "pnpm --filter @onelauncher/frontend -- ",
		"client": "pnpm --filter @onelauncher/client -- ",
		"core": "cd packages/core && cargo",
		"testing": "cd apps/testing && cargo",
		"desktop": "cd apps/desktop && cargo",
		"format": "pnpm lint:es:fix && pnpm lint:rust:fix",
		"lint": "pnpm lint:es && pnpm lint:rust",

		"lint:es": "pnpm eslint . --cache",
		"lint:es:fix": "pnpm lint:es --fix",
		"lint:rust": "cargo +nightly fmt --check && cargo clippy -- -D warnings",
		"lint:rust:fix": "cargo +nightly fmt && cargo clippy --fix",
		"release:node": "pnpm bumpp -r"
	},
	"devDependencies": {
		"@flowr/eslint-config": "^3.10.1",
		"@types/node": "^20.14.12",
		"@vitest/ui": "^2.0.4",
		"bumpp": "^9.4.1",
		"eslint": "^9.7.0",
		"eslint-plugin-solid": "^0.14.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.16.2",
		"typescript": "^5.5.4",
		"vite": "^5.3.5",
		"vitest": "^2.0.4"
	},
	"pnpm": {
		"patchDependencies": {
			"@rspc/tauri@0.2.0": "packages/patches/@rspc__tauri@0.2.0.patch"
		}
	}
}
